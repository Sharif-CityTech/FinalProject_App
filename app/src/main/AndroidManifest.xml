            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activityWeapons"
            android:label="@string/title_weaponlist_detail"
            android:parentActivityName=".activityWeapons" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="citytech.sharif.rusthelp.activityWeapons" />
        </activity>
        <activity
            android:name=".Tiers"
            android:label="@string/title_activity_tiers" >
