<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:background="#000000">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/mainMenu"
            android:id="@+id/menuTitle"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#F6EAE0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="@string/weaponsButton"
            android:id="@+id/weaponsList"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="67dp"
            android:background="#CA412A"
            android:textColor="#F6EAE0"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold|italic"
            android:onClick="toList"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="@string/tiersButton"
            android:id="@+id/buildingTierList"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="154dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#CA412A"
            android:textColor="#F6EAE0"
            android:textStyle="bold"
            android:onClick="toTiers"/>

    </GridLayout>

</RelativeLayout>
